clasificar_riesgo <- function(edad, colesterol) {
if (edad > 60 | colesterol > 240) {
status <- "ALTO RIESGO"
} else if (edad > 40 & colesterol > 200) {
status <- "MODERADO"
} else {
status <- "BAJO"
}
return(status)
}
# Probamos la lógica
clasificar_riesgo(65, 180) # Alto riesgo por edad
clasificar_riesgo(30, 190) # Bajo riesgo
